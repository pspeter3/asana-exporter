nav.top-bar(ng-controller="AuthCtrl as auth")
  ul.title-area
    li.name
      h1
        a Asana Exporter
  section.top-bar-section
    ul.right
      li.has-form
        a.button(ng-click="auth.logout()") Logout

.sidebar.small-4.columns(ng-controller="ProjectsCtrl as projects")
  input(type="text", placeholder="Search", ng-model="search")
  ul.side-nav
    li(ng-repeat="project in projects.list | filter:search | orderBy:'name'")
      a(ng-bind="project.name")